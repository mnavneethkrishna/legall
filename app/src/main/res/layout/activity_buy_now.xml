<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_buy_template"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.whattabiz.legall.activity.BuyNowActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:theme="@style/toolbar">

        </android.support.v7.widget.Toolbar>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">
            <LinearLayout
                android:padding="18dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/txt_title"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Draft Deeds"
                    android:textSize="35sp"
                    android:textColor="@color/colorPrimaryDark"/>
                <View
                    android:layout_width="40dp"
                    android:layout_height="3dp"
                    android:background="@color/colorPrimaryDark"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/property_text"
                    android:layout_marginTop="20dp"/>


                <LinearLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_email"
                        android:alpha="0.4"/>

                    <LinearLayout

                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Delivery Email"/>

                        <TextView
                            android:layout_marginTop="5dp"
                            android:id="@+id/etxt_mail"
                            android:text="Musthu.gm@gmail.com"
                            android:textColor="@color/colorPrimaryDark"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#00ffffff"/>


                    </LinearLayout>



                </LinearLayout>
                <TextView

                    android:id="@+id/txt_cost"
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:textColor="#4caf57"
                    android:text="Rs. 2999."/>
                <TextView
                    android:id="@+id/txt_ready"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#4caf57"
                    android:textSize="16sp"
                    android:padding="10dp"
                    android:text="Cart *"
                    android:layout_gravity="right"/>
                <Button
                    android:id="@+id/btn_get"
                    android:layout_marginTop="10dp"
                    android:padding="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/blue_button"
                    android:textColor="#ffffff"
                    android:layout_gravity="right"
                    android:text="Request"/>

            </LinearLayout>
            </ScrollView>
            <View
                android:layout_width="match_parent"
                android:layout_height="7dp"
                android:background="@drawable/toolbar_dropshadow"
                android:alpha="0.3"/>

        </FrameLayout>

    </LinearLayout>


</FrameLayout>
