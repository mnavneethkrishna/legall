<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.whattabiz.legall.fragments.InternationalFragment"
    android:background="#ffffff">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="25dp">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxHeight="180dp"
            android:src="@drawable/img_international_icon"
            android:layout_gravity="center_horizontal"/>


        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="International Relations"
            android:textSize="35sp"
            android:textColor="@color/colorPrimaryDark"/>




        <View
            android:layout_width="40dp"
            android:layout_height="3dp"
            android:background="@color/colorPrimaryDark"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/international"
            android:layout_marginTop="20dp"/>

        <Button
            android:layout_marginTop="30dp"
            android:id="@+id/btn_get"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/blue_button"
            android:textColor="#ffffff"
            android:text="Get Legal Advice"
            android:layout_marginBottom="10dp"/>

    </LinearLayout>

</FrameLayout>
